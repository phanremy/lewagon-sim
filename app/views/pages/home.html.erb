<div class="body">
 <!--  <div class="background" style="background-image: linear-gradient(rgba(8,76,97,0.7), rgba(8,76,97,0.7)), url(<%= image_path("gaudelet_2.jpg") %>)"> -->
    <div class="container container-home">
      <div>
        <h1 class="animated heartBeat delay-2s" style="font-family:  'Press Start 2P', cursive; ">Le Wagon Simulator</h1>
        <div id="typed-height">
          <span id="typed"></span>
        </div>
        <div>
          <ul style="list-style: none;">
            <li>
              <div class="d-flex justify-content-between py-2">
                <%= image_tag "score.png",height: 45, width: 45 %>
                <p style="font-family:  'Press Start 2P', cursive; "> Try to get the highest score!</p>
              </div>
            </li>
            <li>
              <div class="d-flex justify-content-between py-2">
                <%= image_tag "choice.png",height: 45, width: 45  %>
                <p style="font-family:  'Press Start 2P', cursive; ">Do The right choice!</p>
              </div>
            </li>
            <li>
              <div class="d-flex justify-content-between py-2 ">
                <%= image_tag "stress.png",height: 45, width: 45  %>
                <p style="font-family:  'Press Start 2P', cursive; ">Dont let the stress get the better of you</p>
              </div>
            </li>
          </ul>
        </div>

        <div id="typed-strings">
          <p>Change your life and relive your <br> <em> Le Wagon experience </em> through a game!</p>
        </div>
        <div class="text-center">
          <%= simple_form_for [@user, @game] do |t|%>
            <%= t.submit "Play", class:"restart-btn" %>
          <% end %>
        </div>
      </div>
    </div>
  <!-- </div> -->
</div>



























