<% if @game_event.choice == nil %>
  <div class="main-container">
     <!-- ----- ICI C EST L AFFICHAGE DE L'EVENT---- -->
      <p class="text-center">event description</p>
      <p class="text-center"><%= @game_event.event.description %></p>
      <div class="d-flex justify-content-center">
        <%= image_tag("https://source.unsplash.com/random/350x350") %>
      </div>
      <p class="text-center">event title</p>
      <p class="text-center"><%= @game_event.event.title %></p>
      <br><!-- choices -->
      <p class="text-center">choices</p>
      <div class="d-flex justify-content-around">
        <% @event.choices.each do |choice| %>
          <%#= simple_form_for @game_event, choice do |f| %>
            <%#= f.submit label: choice.description %>
          <%# end %>
          <p><%= choice.title %></p>
        <% end %>
      </div>
  </div>
     <!-- ----- ICI C EST L AFFICHAGE DU CHOIX---- -->
<% else %>
  <div class="d-flex justify-content-between">
    <p class=""><%= @game_event.choice.stress_impact %></p>
    <div class="main-container">
      <h1 class="text-center"><%= @game_event.choice.description %></h1>
      <div class="d-flex justify-content-center">
         <%= image_tag("https://source.unsplash.com/random/350x350") %>
      </div>
        <h1 class="text-center"><%= @game_event.choice.title %></h1>
    </div>
    <p class=""><%= @game_event.choice.score_impact %></p>
  </div>

<% end %>

