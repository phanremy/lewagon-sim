function decreaseStress() {
  console.log('Excessive consumption of kebab is not good for your health, eat with moderation');
  const stress_kebab = document.querySelector("#stress-kebab");
  const kebabLink = document.getElementById("kebab-link");
  const kebab = document.getElementById("kebab");
  const multiply = document.querySelector('.score-multiply');
  const kebabText = document.querySelector('.joker-left-refresh');
  const stressText = document.querySelector('.stress-kebab-text');

  multiply.classList.add('score-multiply');
  multiply.classList.toggle('display-multiply');
  kebab.classList.add('animated');
  kebab.classList.remove('infinite');
  kebab.classList.remove('jello');
  kebab.classList.add('tada');
  kebabText.innerHTML = "Kebab eaten! Yummy Yummy!";

  if (stressText) {
    stressText.style.display = "none";
  }

  if (stress_kebab) {
    stress_kebab.style.visibility = "visible";
    stress_kebab.classList.add('animated', 'bounceInDown');
    stress_kebab.addEventListener('animationend', function() {
      stress_kebab.classList.toggle('animated', 'bounceInDown')
      stress_kebab.classList.add('animated', 'bounceOutUp', "delay-1s");
    });
  };

}


function addKebabEnergy() {
  const energyAfterKebab = document.querySelector('[data-stress-joker]');
  if (energyAfterKebab) {
    const kebab = document.querySelector('.kebab-joker');
    const stress = document.querySelector("[data-stress-display]");
    let newEnergy = energyAfterKebab.dataset.stressJoker;
    stress.style.width = newEnergy + "%";

  }
}

addKebabEnergy();
decreaseStress();
